<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @users.each do |user| %>
        <div class="column is-3">
          <div class="card-a">
            <div class="card-content-a">
              <div class="card-image-a">
                <figure class="image-a">
                  <%= link_to user_path(user.id) do%>
                     <%# <%= attachment_image_tag user, :profile_image, fallback: "noimage.png" %> 
                     <%# <%= image_tag attachment_url(user, :profile_image, fallback: "noimage.png") %> 
                     <%= attachment_image_tag user, :profile_image, fallback: "noimage.png", class: "profile_image"  %>
                    <%=link_to user.name, user_path(user.id)%>
                  <% end %>
                </figure>
              </div>
            </div>
            <div class="card-content-a">
              <div class="media">
                <div class="media-content">
                  <%# <div class="title">
                  </div> %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>


